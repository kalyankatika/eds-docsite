{
  "name": "eds-docsite",
  "version": "1.0.0",
  "description": "Enterprise Design System Documentation",
  "main": "index.js",
  "scripts": {
    "convert-legacy": "node _scripts/njx-to-md.js",
    "update-nav": "node _scripts/update-navigation.js",
    "build": "npm run convert-legacy && npm run update-nav && npm run build:css && eleventy",
    "build:css": "tailwindcss -i ./css/tailwind.css -o ./_site/css/style.css --minify",
    "watch:css": "tailwindcss -i ./css/tailwind.css -o ./_site/css/style.css --watch",
    "start": "npm run build:css && eleventy --serve --port=3000",
    "dev": "concurrently \"npm run watch:css\" \"eleventy --serve --port=3000\"",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@11ty/eleventy": "^2.0.1",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@tailwindcss/typography": "^0.5.16",
    "autoprefixer": "^10.4.17",
    "concurrently": "^8.2.2",
    "postcss": "^8.4.35",
    "tailwindcss": "^3.4.1"
  },
  "dependencies": {
    "eleventy-plugin-toc": "^1.1.5",
    "gray-matter": "^4.0.3",
    "lunr": "^2.3.9",
    "markdown-it": "^14.1.0",
    "markdown-it-anchor": "^9.2.0"
  }
}
